<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="5"
    android:padding="30dp"
    tools:context=".ServerActivity"
>
    <TextView
        android:id="@+id/twServerNameLabel"
        android:text="@string/server_name"
        android:layout_row="0"
        android:layout_column="0"
        android:padding="10dp"
        android:layout_gravity="center|right"
    />
    <TextView
        android:id="@+id/twServerNameValue"
        android:layout_row="0"
        android:padding="10dp"
        android:layout_column="1"
    />
    <TextView
        android:id="@+id/twServerStatusLabel"
        android:text="@string/server_status"
        android:layout_row="1"
        android:layout_column="0"
        android:padding="10dp"
        android:layout_gravity="center|right"
    />
    <TextView
        android:id="@+id/twServerStatusValue"
        android:layout_row="1"
        android:padding="10dp"
        android:layout_column="1"
    />
    <TextView
        android:id="@+id/twIServerAddressLabel"
        android:text="@string/ip_address"
        android:layout_row="2"
        android:layout_column="0"
        android:padding="10dp"
        android:layout_gravity="center|right"
    />
    <TextView
        android:id="@+id/twServerIpAddressValue"
        android:layout_row="2"
        android:padding="10dp"
        android:layout_column="1"
    />
    <TextView
        android:id="@+id/twServerOsLabel"
        android:text="@string/operating_system"
        android:layout_row="3"
        android:layout_column="0"
        android:padding="10dp"
        android:layout_gravity="center|right"
    />
    <TextView
        android:id="@+id/twServerOsValue"
        android:layout_row="3"
        android:padding="10dp"
        android:layout_column="1"
    />
    <Button
        android:id="@+id/btnServerDelete"
        android:text="@string/delete_server"
        android:background="@android:color/holo_red_dark"
        android:layout_row="4"
        android:padding="8dp"
        android:layout_column="0"
    />
    <Button
        android:id="@+id/btnServerSend"
        android:text="@string/send_config_again"
        android:background="@android:color/holo_green_dark"
        android:layout_row="4"
        android:padding="8dp"
        android:layout_column="1"
    />
</GridLayout>