<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="7"
    android:padding="30dp"
    tools:context=".ServerActivity">

    <TextView
        android:id="@+id/twServerNameLabel"
        android:text="Server name:"
        android:layout_row="0"
        android:layout_column="0"
        android:padding="10dp"
        android:layout_gravity="center|right" />

    <TextView
        android:id="@+id/twServerNameValue"
        android:text="Server 123"
        android:layout_row="0"
        android:padding="10dp"
        android:layout_column="1" />

    <TextView
        android:id="@+id/twServerStatusLabel"
        android:text="Server status:"
        android:layout_row="1"
        android:layout_column="0"
        android:padding="10dp"
        android:layout_gravity="center|right" />

    <TextView
        android:id="@+id/twServerStatusValue"
        android:text="ONLINE"
        android:layout_row="1"
        android:padding="10dp"
        android:layout_column="1" />

    <TextView
        android:id="@+id/twIServerpAddressLabel"
        android:text="IP Address:"
        android:layout_row="2"
        android:layout_column="0"
        android:padding="10dp"
        android:layout_gravity="center|right" />

    <TextView
        android:id="@+id/twServerIpAddressValue"
        android:text="10.0.0.21"
        android:layout_row="2"
        android:padding="10dp"
        android:layout_column="1" />

    <TextView
        android:id="@+id/twServerOsLabel"
        android:text="Operating system:"
        android:layout_row="3"
        android:layout_column="0"
        android:padding="10dp"
        android:layout_gravity="center|right" />


    <TextView
        android:id="@+id/twServerOsValue"
        android:text="FreeBSD"
        android:layout_row="3"
        android:padding="10dp"
        android:layout_column="1" />


    <TextView
        android:id="@+id/twServerConfigLabel"
        android:text="Config name:"
        android:layout_row="4"
        android:layout_column="0"
        android:padding="10dp"
        android:layout_gravity="center|right" />


    <TextView
        android:id="@+id/twServerConfigValue"
        android:text="some-config-name"
        android:layout_row="4"
        android:padding="10dp"
        android:layout_column="1" />

    <TextView
        android:id="@+id/twLastOnlineLabel"
        android:text="Last online:"
        android:layout_row="5"
        android:layout_column="0"
        android:padding="10dp"
        android:layout_gravity="center|right" />

    <TextView
        android:id="@+id/twLastOnlineValue"
        android:text="01.02.2003"
        android:layout_row="5"
        android:padding="10dp"
        android:layout_column="1" />

    <Button
        android:id="@+id/btnServerDelete"
        android:text="Delete Server"
        android:layout_row="6"
        android:layout_column="0" />

    <Button
        android:id="@+id/btnServerSend"
        android:text="Send Config Again"
        android:layout_row="6"
        android:layout_column="1" />

</GridLayout>